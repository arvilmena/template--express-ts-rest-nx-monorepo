---
import BreadcrumbProps from './Breadcrumb.astro';
import Breadcrumb from './Breadcrumb.astro';
import Header from './Header.astro';
type Props = {
  fullWidth?: boolean;
  breadcrumb: BreadcrumbProps;
  title: string;
};

const { fullWidth, breadcrumb, title } = Astro.props;
---

<html lang="en">
  <head>
    <title>{title}</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script
      src="https://cdn.tailwindcss.com?plugins=forms,typography,aspect-ratio"
    ></script>

    {/* Data Tables */}
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.slim.min.js"
      integrity="sha512-sNylduh9fqpYUK5OYXWcBleGzbZInWj8yCJAU57r1dpSK9tP2ghf/SRYCMj+KsslFkCOt3TvJrX2AV/Gc3wOqA=="
      crossorigin="anonymous"></script>
    <link
      href="https://cdn.datatables.net/v/dt/dt-1.13.8/cr-1.7.0/fc-4.3.0/fh-3.4.0/r-2.5.0/sb-1.6.0/sp-2.2.0/sl-1.7.0/sr-1.3.0/datatables.min.css"
      rel="stylesheet"
    />

    <script
      src="https://cdn.datatables.net/v/dt/dt-1.13.8/cr-1.7.0/fc-4.3.0/fh-3.4.0/r-2.5.0/sb-1.6.0/sp-2.2.0/sl-1.7.0/sr-1.3.0/datatables.min.js"
    ></script>
    {/* Data Tables end */}
  </head>
  <body
    class:list={[
      `mx-auto w-full`,
      {
        'max-w-7xl': !fullWidth,
      },
    ]}
  >
    <header
      class:list={[
        `mx-auto w-full`,
        {
          'max-w-7xl': fullWidth,
        },
      ]}
    >
      <Header />
      <Breadcrumb breadcrumb={breadcrumb} />
    </header>

    <main
      class:list={[
        `prose`,
        {
          'px-4 md:px-6 lg:px-6': fullWidth,
        },
      ]}
    >
      <slot />
    </main>
  </body>
</html>
