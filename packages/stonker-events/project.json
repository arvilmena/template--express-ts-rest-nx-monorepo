{
  "name": "stonker-events",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/stonker-events/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:swc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/stonker-events",
        "main": "packages/stonker-events/src/index.ts",
        "tsConfig": "packages/stonker-events/tsconfig.lib.json",
        "assets": ["packages/stonker-events/*.md"]
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs stonker-events {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/stonker-events/jest.config.ts"
      }
    }
  },
  "tags": []
}
